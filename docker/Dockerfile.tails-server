FROM python:3.12

RUN pip3 install --upgrade pip
RUN pip3 install --upgrade setuptools

ADD tails_server ./tails_server
ADD logging/config.yml /usr/src/app/tails-server/logging/config.yml
ADD logging/jsonLog.py /usr/local/lib/python3.12/jsonLog.py
ADD bin ./bin
ADD README.md ./
ADD pyproject.toml ./

RUN pip3 install --no-cache-dir .

ENTRYPOINT ["/bin/bash", "-c", "tails-server \"$@\""]

